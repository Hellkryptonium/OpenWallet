<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20.0" styleClass="screen-centered, screen-padding" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.StartupController">

    <Label text="OpenWallet" styleClass="label-hero" />
    <Label text="Secure. Non-custodial. Yours." styleClass="muted" />
    
    <VBox spacing="15.0" alignment="CENTER">
        <Button fx:id="createWalletBtn" mnemonicParsing="false" onAction="#handleCreateWallet" text="Create New Wallet" prefWidth="250.0" prefHeight="45.0" styleClass="button-pill" />
        <Button fx:id="importWalletBtn" mnemonicParsing="false" onAction="#handleImportWallet" text="Import Wallet" prefWidth="250.0" prefHeight="45.0" styleClass="button-secondary, button-pill" />
    </VBox>
</VBox>
