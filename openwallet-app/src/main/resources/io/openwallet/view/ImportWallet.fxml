<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.ImportWalletController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Import Wallet" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>
    <Label text="Enter your 12-word recovery phrase to restore your wallet." textFill="#7f8c8d" wrapText="true" maxWidth="400.0" textAlignment="CENTER" />
    
    <VBox spacing="15.0" maxWidth="400.0">
        <Label text="Recovery Phrase (Mnemonic)" textFill="#7f8c8d" />
        <TextArea fx:id="mnemonicField" prefRowCount="3" wrapText="true" promptText="word1 word2 word3 ..." style="-fx-font-size: 14px;" />
        
        <Label text="Wallet Profile Name" textFill="#7f8c8d" />
        <TextField fx:id="profileNameField" promptText="e.g. My Main Wallet" style="-fx-font-size: 14px; -fx-padding: 10;" />
        
        <Label text="New Password" textFill="#7f8c8d" />
        <PasswordField fx:id="passwordField" promptText="Create a strong password" style="-fx-font-size: 14px; -fx-padding: 10;" />
        
        <VBox spacing="10.0">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <Button fx:id="importBtn" defaultButton="true" mnemonicParsing="false" onAction="#handleImport" text="Import Wallet" prefWidth="400.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 10; -fx-background-radius: 5;" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" prefWidth="400.0" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 14px; -fx-cursor: hand;" />
        </VBox>
    </VBox>
</VBox>
