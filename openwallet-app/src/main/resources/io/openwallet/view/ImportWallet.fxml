<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="screen-centered, screen-padding" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.ImportWalletController">

    <Label text="Import Wallet" styleClass="label-header" />
    <Label text="Enter your 12-word recovery phrase to restore your wallet." styleClass="muted" wrapText="true" maxWidth="420.0" textAlignment="CENTER" />
    
    <VBox spacing="14.0" maxWidth="420.0" styleClass="card">
        <Label text="Recovery Phrase (Mnemonic)" styleClass="muted" />
        <TextArea fx:id="mnemonicField" prefRowCount="3" wrapText="true" promptText="word1 word2 word3 ..." />
        
        <Label text="Wallet Profile Name" styleClass="muted" />
        <TextField fx:id="profileNameField" promptText="e.g. My Main Wallet" />
        
        <Label text="New Password" styleClass="muted" />
        <PasswordField fx:id="passwordField" promptText="Create a strong password" />
        
        <VBox spacing="10.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
            <Button fx:id="importBtn" defaultButton="true" mnemonicParsing="false" onAction="#handleImport" text="Import Wallet" prefWidth="360.0" styleClass="button-pill" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" prefWidth="360.0" styleClass="button-ghost, muted" />
        </VBox>
    </VBox>
</VBox>
