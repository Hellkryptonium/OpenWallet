<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="14.0" styleClass="screen, screen-padding" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.BridgeController">

    <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="toolbar">
        <Label text="Bridge (Testnet)" styleClass="label-header" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Back" onAction="#handleBack" styleClass="button-ghost" />
    </HBox>

    <Label text="This screen opens an external bridge UI. Configure a bridge URL in networks.json (or paste one below)." wrapText="true" styleClass="muted" />

    <VBox spacing="10.0" styleClass="card, card-compact">
        <Label text="Target Network" styleClass="muted" />
        <ComboBox fx:id="targetNetworkSelector" />

        <Label text="Token" styleClass="muted" />
        <ComboBox fx:id="tokenSelector" />

        <Label text="Amount" styleClass="muted" />
        <TextField fx:id="amountField" promptText="0.0" />

        <Label text="Bridge" styleClass="muted" />
        <ComboBox fx:id="bridgeSelector" />
    </VBox>

    <Label fx:id="statusLabel" text="" wrapText="true" styleClass="status-label" />

    <Button text="Open Bridge" onAction="#handleOpenBridge" prefWidth="200.0" prefHeight="44.0" styleClass="button, button-pill" />
</VBox>
