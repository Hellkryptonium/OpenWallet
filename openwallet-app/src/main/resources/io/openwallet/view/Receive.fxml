<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="screen, screen-padding" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.ReceiveController">

    <VBox alignment="CENTER" spacing="14.0" maxWidth="560.0" styleClass="card">
        <Label text="Receive ETH" styleClass="label-header" />
        <Label text="Scan this QR code to receive funds" styleClass="muted" />

        <ImageView fx:id="qrCodeImageView" fitHeight="220.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" />

        <VBox alignment="CENTER" spacing="6.0" styleClass="card, card-compact" maxWidth="520.0">
            <Label text="Your Address" styleClass="muted" />
            <Label fx:id="addressLabel" text="0x..." wrapText="true" textAlignment="CENTER" styleClass="mono" />
        </VBox>

        <Button text="Copy Address" onAction="#handleCopy" styleClass="button-pill" />
        <Button text="Back" onAction="#handleBack" styleClass="button-ghost, muted" />

        <Label fx:id="statusLabel" styleClass="status-label, status-success" />
    </VBox>
</VBox>
