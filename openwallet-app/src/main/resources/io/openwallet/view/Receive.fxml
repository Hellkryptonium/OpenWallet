<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.ReceiveController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Receive ETH" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <Label text="Scan this QR code to receive funds" textFill="#7f8c8d" />

    <ImageView fx:id="qrCodeImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />

    <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
        <Label text="Your Address" textFill="#7f8c8d" style="-fx-font-size: 12px;" />
        <Label fx:id="addressLabel" text="0x..." wrapText="true" textAlignment="CENTER" textFill="#2c3e50">
            <font>
                <Font name="Monospaced Regular" size="14.0" />
            </font>
        </Label>
    </VBox>

    <Button text="Copy Address" onAction="#handleCopy" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;" />
    
    <Button text="Back" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-cursor: hand;" />
    
    <Label fx:id="statusLabel" textFill="#2ecc71" />
</VBox>
