<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Hyperlink?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Welcome Back" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="32.0" />
        </font>
    </Label>
    
    <VBox spacing="10.0" maxWidth="300.0">
        <Label text="Select Wallet Profile" textFill="#7f8c8d" />
        <ComboBox fx:id="profileSelector" prefWidth="300.0" style="-fx-font-size: 14px;" />
        
        <Label text="Password" textFill="#7f8c8d">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 14px; -fx-padding: 10;" />
        
        <Button fx:id="loginBtn" defaultButton="true" mnemonicParsing="false" onAction="#handleLogin" text="Login" prefWidth="300.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 10; -fx-background-radius: 5;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
        
        <VBox alignment="CENTER" spacing="5.0">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <Hyperlink onAction="#handleCreateNew" text="Create New Wallet" textFill="#3498db" />
            <Hyperlink onAction="#handleImport" text="Import Existing Wallet" textFill="#3498db" />
        </VBox>
    </VBox>
</VBox>
