<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Hyperlink?>

<VBox alignment="CENTER" spacing="16.0" styleClass="login-screen, screen-padding" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.openwallet.controller.LoginController">

    <VBox alignment="CENTER" spacing="6.0">
        <Label text="OPENWALLET" styleClass="label-hero, mono, login-brand" />
        <Label text="Secure access portal" styleClass="muted, login-tagline" />
    </VBox>
    
    <VBox spacing="12.0" maxWidth="380.0" styleClass="card, login-card">
        <Label text="Select Wallet Profile" styleClass="muted" />
        <ComboBox fx:id="profileSelector" prefWidth="320.0" />
        
        <Label text="Password" styleClass="muted">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <PasswordField fx:id="passwordField" promptText="Enter your password" />
        
        <Button fx:id="loginBtn" defaultButton="true" mnemonicParsing="false" onAction="#handleLogin" text="LOGIN SYSTEM" prefWidth="320.0" styleClass="login-primary">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        
        <VBox alignment="CENTER" spacing="6.0" styleClass="login-links">
            <VBox.margin>
                <Insets top="6.0" />
            </VBox.margin>
            <Hyperlink onAction="#handleCreateNew" text="Create New Wallet" />
            <Hyperlink onAction="#handleImport" text="Import Existing Wallet" />
        </VBox>
    </VBox>
</VBox>
